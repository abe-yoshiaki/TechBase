.contents.row
  - if flash[:post_done]
    .post_done
  - @tweets.each do |tweet|
    .row
      .col.s12.m6.offset-m3
        .cards
          .card-co
            = link_to "/tweets/#{tweet.id}", method: :get do
              = tweet.title
              %br
            = tweet.content
          .created_at-border
          .card_option
            - if user_signed_in? && current_user.id == tweet.user_id
              %li
                #card_option--btn.waves-effect.waves-light.btn.light-blue.darken-4
                  = link_to '編集', "/tweets/#{tweet.id}/edit",method: :get
              %li
                #card_option--btn.waves-effect.waves-light.btn.light-blue.darken-4
                  = link_to '削除', "/tweets/#{tweet.id}", method: :delete
              %p.created_at-text
                作成日:#{tweet.created_at.in_time_zone('Tokyo')}
.container
  = paginate(@tweets)
